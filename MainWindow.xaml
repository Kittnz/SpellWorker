<Window x:Class="SpellWorker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Spell Worker" Height="788" Width="1230">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="59*"/>
            <ColumnDefinition Width="18*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="1095*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0" Grid.ColumnSpan="5" Margin="0,0,0,694" Grid.RowSpan="2">
            <MenuItem Header="File">
                <MenuItem Header="New Spell" Click="NewSpell_Click"/>
                <MenuItem Header="Load Spell" Click="LoadSpell_Click"/>
                <MenuItem Header="Save Spell" Click="SaveSpell_Click"/>
                <MenuItem Header="Generate SQL" Click="GenerateSQL_Click"/>
                <Separator/>
                <MenuItem Header="Exit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About" Click="About_Click"/>
            </MenuItem>
        </Menu>

        <!-- Main Content -->
        <TabControl Grid.Row="1" Margin="10,24,10,-4" Grid.ColumnSpan="5" Grid.RowSpan="2">
            <TabItem Header="Basic Properties">
                <ScrollViewer>
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Row 0 -->
                        <Label Grid.Row="0" Grid.Column="0" Content="Spell ID:" ToolTip="Unique identifier for the spell"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Name="txtSpellId" Margin="5"/>

                        <Label Grid.Row="0" Grid.Column="2" Content="Spell Name:" ToolTip="Name of the spell shown in-game"/>
                        <TextBox Grid.Row="0" Grid.Column="3" Name="txtSpellName" Margin="5"/>

                        <!-- Row 1 -->
                        <Label Grid.Row="1" Grid.Column="0" Content="School:" ToolTip="Magic school of the spell"/>
                        <ComboBox Grid.Row="1" Grid.Column="1" Name="cmbSchool" Margin="5"/>

                        <Label Grid.Row="1" Grid.Column="2" Content="Category:" ToolTip="Spell category for cooldown calculation"/>
                        <ComboBox Grid.Row="1" Grid.Column="3" Name="cmbCategory" Margin="5"/>

                        <!-- Row 2 -->
                        <Label Grid.Row="2" Grid.Column="0" Content="Dispel Type:" ToolTip="Type of dispel that can remove this spell"/>
                        <ComboBox Grid.Row="2" Grid.Column="1" Name="cmbDispel" Margin="5"/>

                        <Label Grid.Row="2" Grid.Column="2" Content="Mechanic:" ToolTip="Mechanic of the spell, affects immunities"/>
                        <ComboBox Grid.Row="2" Grid.Column="3" Name="cmbMechanic" Margin="5"/>

                        <!-- Row 3 -->
                        <Label Grid.Row="3" Grid.Column="0" Content="Targets:" ToolTip="Target flags for the spell"/>
                        <ComboBox Grid.Row="3" Grid.Column="1" Name="cmbTargets" Margin="5"/>

                        <Label Grid.Row="3" Grid.Column="2" Content="Target Creature Type:" ToolTip="Types of creatures this spell can target"/>
                        <ComboBox Grid.Row="3" Grid.Column="3" Name="cmbTargetCreatureType" Margin="5"/>

                        <!-- Row 4 -->
                        <Label Grid.Row="4" Grid.Column="0" Content="Casting Time Index:" ToolTip="Index into SpellCastTimes.dbc"/>
                        <TextBox Grid.Row="4" Grid.Column="1" Name="txtCastingTimeIndex" Margin="5"/>

                        <Label Grid.Row="4" Grid.Column="2" Content="Recovery Time:" ToolTip="Cooldown in milliseconds"/>
                        <TextBox Grid.Row="4" Grid.Column="3" Name="txtRecoveryTime" Margin="5"/>

                        <!-- Row 5 -->
                        <Label Grid.Row="5" Grid.Column="0" Content="Category Recovery Time:" ToolTip="Category cooldown in milliseconds"/>
                        <TextBox Grid.Row="5" Grid.Column="1" Name="txtCategoryRecoveryTime" Margin="5"/>

                        <Label Grid.Row="5" Grid.Column="2" Content="Interrupt Flags:" ToolTip="Conditions that interrupt spell casting"/>
                        <ComboBox Grid.Row="5" Grid.Column="3" Name="cmbInterruptFlags" Margin="5"/>

                        <!-- Row 6 -->
                        <Label Grid.Row="6" Grid.Column="0" Content="Aura Interrupt Flags:" ToolTip="Conditions that remove auras"/>
                        <ComboBox Grid.Row="6" Grid.Column="1" Name="cmbAuraInterruptFlags" Margin="5"/>

                        <Label Grid.Row="6" Grid.Column="2" Content="Channel Interrupt Flags:" ToolTip="Conditions that interrupt channeling"/>
                        <ComboBox Grid.Row="6" Grid.Column="3" Name="cmbChannelInterruptFlags" Margin="5"/>

                        <!-- Row 7 -->
                        <Label Grid.Row="7" Grid.Column="0" Content="Proc Flags:" ToolTip="Conditions that can trigger the spell"/>
                        <ComboBox Grid.Row="7" Grid.Column="1" Name="cmbProcFlags" Margin="5"/>

                        <Label Grid.Row="7" Grid.Column="2" Content="Proc Chance:" ToolTip="Chance to proc in percent"/>
                        <TextBox Grid.Row="7" Grid.Column="3" Name="txtProcChance" Margin="5"/>

                        <!-- Row 8 -->
                        <Label Grid.Row="8" Grid.Column="0" Content="Proc Charges:" ToolTip="Number of times the proc can occur"/>
                        <TextBox Grid.Row="8" Grid.Column="1" Name="txtProcCharges" Margin="5"/>

                        <Label Grid.Row="8" Grid.Column="2" Content="Max Level:" ToolTip="Maximum level the spell is effective at"/>
                        <TextBox Grid.Row="8" Grid.Column="3" Name="txtMaxLevel" Margin="5"/>

                        <!-- Row 9 -->
                        <Label Grid.Row="9" Grid.Column="0" Content="Base Level:" ToolTip="Minimum level to learn the spell"/>
                        <TextBox Grid.Row="9" Grid.Column="1" Name="txtBaseLevel" Margin="5"/>

                        <Label Grid.Row="9" Grid.Column="2" Content="Spell Level:" ToolTip="Level of the spell for calculations"/>
                        <TextBox Grid.Row="9" Grid.Column="3" Name="txtSpellLevel" Margin="5"/>

                        <!-- Row 10 -->
                        <Label Grid.Row="10" Grid.Column="0" Content="Duration Index:" ToolTip="Index into SpellDuration.dbc"/>
                        <TextBox Grid.Row="10" Grid.Column="1" Name="txtDurationIndex" Margin="5"/>

                        <Label Grid.Row="10" Grid.Column="2" Content="Power Type:" ToolTip="Type of resource used (mana, rage, etc.)"/>
                        <ComboBox Grid.Row="10" Grid.Column="3" Name="cmbPowerType" Margin="5"/>

                        <!-- Row 11 -->
                        <Label Grid.Row="11" Grid.Column="0" Content="Mana Cost:" ToolTip="Base resource cost"/>
                        <TextBox Grid.Row="11" Grid.Column="1" Name="txtManaCost" Margin="5"/>

                        <Label Grid.Row="11" Grid.Column="2" Content="Mana Cost Per Level:" ToolTip="Additional cost per level"/>
                        <TextBox Grid.Row="11" Grid.Column="3" Name="txtManaCostPerLevel" Margin="5"/>

