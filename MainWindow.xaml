                                    <CheckBox Name="chkAttribute30" Content="SPELL_ATTR_UNAFFECTED_BY_INVULNERABILITY" Margin="3"/>
                                    <CheckBox Name="chkAttribute31" Content="SPELL_ATTR_DIMINISHING_RETURNS" Margin="3"/>
                                    <CheckBox Name="chkAttribute32" Content="SPELL_ATTR_CANT_CANCEL" Margin="3"/>
                                </StackPanel>
                            </Grid>
                        </GroupBox>
                    </Grid>
                </ScrollViewer>
            </TabItem>

