                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <CheckBox Name="chkAttribute1" Content="SPELL_ATTR_DONT_DISPLAY_SPELL_RESULT" Margin="3"/>
                                    <CheckBox Name="chkAttribute2" Content="SPELL_ATTR_RANGED" Margin="3"/>
                                    <CheckBox Name="chkAttribute3" Content="SPELL_ATTR_ON_NEXT_SWING_1" Margin="3"/>
                                    <CheckBox Name="chkAttribute4" Content="SPELL_ATTR_IS_REPLENISHMENT" Margin="3"/>
                                    <CheckBox Name="chkAttribute5" Content="SPELL_ATTR_IS_ABILITY" Margin="3"/>
                                    <CheckBox Name="chkAttribute6" Content="SPELL_ATTR_TRADESPELL" Margin="3"/>
                                    <CheckBox Name="chkAttribute7" Content="SPELL_ATTR_PASSIVE" Margin="3"/>
                                    <CheckBox Name="chkAttribute8" Content="SPELL_ATTR_HIDDEN_CLIENTSIDE" Margin="3"/>
                                    <CheckBox Name="chkAttribute9" Content="SPELL_ATTR_HIDE_IN_COMBAT_LOG" Margin="3"/>
                                    <CheckBox Name="chkAttribute10" Content="SPELL_ATTR_TARGET_MAINHAND_ITEM" Margin="3"/>
                                    <CheckBox Name="chkAttribute11" Content="SPELL_ATTR_ON_NEXT_SWING_2" Margin="3"/>
                                    <CheckBox Name="chkAttribute12" Content="SPELL_ATTR_WEARER_CASTS_PROC_TRIGGER" Margin="3"/>
                                    <CheckBox Name="chkAttribute13" Content="SPELL_ATTR_DAYTIME_ONLY" Margin="3"/>
                                    <CheckBox Name="chkAttribute14" Content="SPELL_ATTR_NIGHT_ONLY" Margin="3"/>
                                    <CheckBox Name="chkAttribute15" Content="SPELL_ATTR_INDOORS_ONLY" Margin="3"/>
                                    <CheckBox Name="chkAttribute16" Content="SPELL_ATTR_OUTDOORS_ONLY" Margin="3"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <CheckBox Name="chkAttribute17" Content="SPELL_ATTR_NOT_SHAPESHIFT" Margin="3"/>
                                    <CheckBox Name="chkAttribute18" Content="SPELL_ATTR_ONLY_STEALTHED" Margin="3"/>
                                    <CheckBox Name="chkAttribute19" Content="SPELL_ATTR_DONT_AFFECT_SHEATH_STATE" Margin="3"/>
                                    <CheckBox Name="chkAttribute20" Content="SPELL_ATTR_LEVEL_DAMAGE_CALCULATION" Margin="3"/>
                                    <CheckBox Name="chkAttribute21" Content="SPELL_ATTR_STOP_ATTACK_TARGET" Margin="3"/>
