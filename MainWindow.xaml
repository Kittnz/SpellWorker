                        <Label Grid.Row="13" Grid.Column="2" Content="Stack Amount:" ToolTip="Maximum stacks of the spell"/>
                        <TextBox Grid.Row="13" Grid.Column="3" Name="txtStackAmount" Margin="5"/>

