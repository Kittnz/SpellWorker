                                    <CheckBox Name="chkAttribute23" Content="SPELL_ATTR_SET_TRACKING_TARGET" Margin="3"/>
                                    <CheckBox Name="chkAttribute24" Content="SPELL_ATTR_CASTABLE_WHILE_DEAD" Margin="3"/>
                                    <CheckBox Name="chkAttribute25" Content="SPELL_ATTR_CASTABLE_WHILE_MOUNTED" Margin="3"/>
                                    <CheckBox Name="chkAttribute26" Content="SPELL_ATTR_DISABLED_WHILE_ACTIVE" Margin="3"/>
                                    <CheckBox Name="chkAttribute27" Content="SPELL_ATTR_NEGATIVE" Margin="3"/>
                                    <CheckBox Name="chkAttribute28" Content="SPELL_ATTR_CASTABLE_WHILE_SITTING" Margin="3"/>
