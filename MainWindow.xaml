                <!-- <MenuItem Header="New Spell" Click="NewSpell_Click"/> -->
                <MenuItem Header="Load Spell" Click="LoadSpell_Click"/>
                <!-- <MenuItem Header="Save Spell" Click="SaveSpell_Click"/> -->
                <MenuItem Header="Generate SQL" Click="GenerateSQL_Click"/>
                <Separator/>
                <MenuItem Header="Exit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About" Click="About_Click"/>
            </MenuItem>
        </Menu>

