                        <!-- Row 4 -->
                        <Label Grid.Row="4" Grid.Column="0" Content="Casting Time:" ToolTip="Spell Casting Time from dbc_spell_cast_times table"/>
                        <ComboBox Grid.Row="4" Grid.Column="1" Name="cmbCastTimesIndex" Margin="5" DisplayMemberPath="." SelectionChanged="cmbCastTimesIndex_SelectionChanged"/>

                        <Label Grid.Row="4" Grid.Column="2" Content="Recovery Time:" ToolTip="Cooldown in milliseconds"/>
                        <TextBox Grid.Row="4" Grid.Column="3" Name="txtRecoveryTime" Margin="5"/>

                        <!-- Row 5 -->
                        <Label Grid.Row="5" Grid.Column="0" Content="Category Recovery Time:" ToolTip="Category cooldown in milliseconds"/>
