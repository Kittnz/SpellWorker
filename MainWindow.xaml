                        <TextBox Grid.Row="12" Grid.Column="1" Name="txtManaPerSecond" Margin="5"/>

                        <Label Grid.Row="12" Grid.Column="2" Content="Range Index:" ToolTip="Index into SpellRange.dbc"/>
                        <TextBox Grid.Row="12" Grid.Column="3" Name="txtRangeIndex" Margin="5"/>

